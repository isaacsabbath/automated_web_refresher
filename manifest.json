{
  "manifest_version": 2,
  "name": "Auto Refresh Extension",
  "description": "Automatically refreshes a webpage at random intervals.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "refresh.png",
      "48": "refresh.png",
      "128": "refresh.png"
    }
  },
  "icons": {
    "16": "refresh.png",
    "48": "refresh.png",
    "128": "refresh.png"
  }
}
